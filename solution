    const TAB_ID = Date.now() + '_' + Math.random();
    const CHECK_KEY = 'tab-check-ping';
    const RESPONSE_KEY = 'tab-check-response';
    let isDuplicate = false;

    // Only the new tab sends the ping
    localStorage.setItem(CHECK_KEY, TAB_ID);

    window.addEventListener('storage', (e) => {
      if (e.key === RESPONSE_KEY && e.newValue !== TAB_ID) {
        // Another tab responded â†’ this is a duplicate tab
        isDuplicate = true;
        alert('ðŸš¨ This tab is a duplicate!');
      }

      if (e.key === CHECK_KEY && e.newValue !== TAB_ID) {
        // A new tab is checking for duplicates â†’ respond
        localStorage.setItem(RESPONSE_KEY, e.newValue);
      }
    });

    // Wait briefly to see if someone replies
    setTimeout(() => {
      if (!isDuplicate) {
        console.log('âœ… This is the first (or only) tab.');
      }
    }, 300);
